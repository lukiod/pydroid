<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgotpwd">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/android_lar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clipToOutline="true"
        tools:ignore="MissingConstraints,UnusedAttribute"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="54dp">

        <TextView
            android:id="@+id/pydroid"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="59dp"
            android:gravity="top"
            android:text="Reset Password"
            android:textAppearance="@style/pydroid"
            android:textSize="55dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/email"
            android:layout_width="103dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="282dp"
            android:gravity="top"
            android:text="@string/email"
            android:textAppearance="@style/email" />

        <EditText
            android:id="@+id/loginEmail1"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="339dp"
            android:drawableLeft="@drawable/email"
            android:ems="10"
            android:hint="pydroid@gmail.com"
            android:inputType="textEmailAddress"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/frgtpwd1"

            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="427dp"
            android:layout_marginEnd="31dp"
            android:text="Reset Password"
            tools:ignore="MissingConstraints"
            app:cornerRadius="0dp"/>

        <Button
            android:id="@+id/backtologin"

            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="557dp"
            android:layout_marginEnd="31dp"
            android:text="Login"
            tools:ignore="MissingConstraints"
            app:cornerRadius="0dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>